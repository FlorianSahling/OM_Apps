<h1>Index of Sites</h1>
<table class="table" id="sites">
  <tr>
    <th>Name</th>
    <th>Codename</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.codename %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Update', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'Create a new Site', new_site_path %><br> <br>
